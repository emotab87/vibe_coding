{
  "permissions": {
    "allow": [
      "WebFetch(domain:docs.realworld.show)",
      "WebFetch(domain:main--realworld-docs.netlify.app)",
      "WebFetch(domain:realworld-docs.netlify.app)",
      "WebFetch(domain:github.com)",
      "WebSearch",
      "WebFetch(domain:lucumr.pocoo.org)",
      "Bash(git init:*)",
      "Bash(git config:*)",
      "Bash(git add:*)",
      "Bash(gh issue:*)",
      "Bash(git commit:*)",
      "Bash(gh auth:*)",
      "Bash(git push:*)",
      "Bash(gh repo view:*)"
    ],
    "deny": [],
    "ask": []
  },
  "mcpServers": {
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "perplexity-ask": {
      "command": "npx",
      "args": ["-y", "server-perplexity-ask"]
    }
  }
}
